{
  "manifest_version": 2,

  "name": "Feed Learn",
  "description": "This extension helps you learn vocabulary as you browse your Facebook feed",
  "version": "1.1",

  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "http://facebook.com/*",
    "https://facebook.com/*",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*",
    "contextMenus"
  ],
  "content_scripts": [ {
    "all_frames": true,
    "js": [ "jquery-1.11.1.min.js", "feedlearn.js" ],
    "matches": [ "http://facebook.com/*", "https://facebook.com/*", "http://www.facebook.com/*", "https://www.facebook.com/*" ]
  } ]
}

